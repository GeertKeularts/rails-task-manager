<div class="text-center">
  <h1><%= @task.name %></h1>
  <div class="task-list">
    <p>
    <%=  @task.description %>
    <%= @task.complete ? "[X]" : "[ ]" %> 
    </p>
    
    <p>
      <%= link_to "Complete", complete_task_path, method: :patch  %> <br>
      <%= link_to "edit", edit_task_path  %> <br>
      <%= link_to "Delete", task_path(@task), method: :delete, 
      data: {confirm: "Are your sure you finished?"} %> <br>
      <%= link_to "back", tasks_path  %>
    </p> 
  </div>
</div>
